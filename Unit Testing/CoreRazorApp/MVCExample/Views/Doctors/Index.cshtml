@model IEnumerable<MVCExample.Models.Doctor>

@{
    ViewData["Title"] = "Doctors List";
}

<h2 class="text-center my-4">Doctors Database</h2>

<div class="container">
    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Doctor Name</th>
                <th>Specialization</th>
                <th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var doctor in Model)
            {
                <tr>
                    <td>@doctor.Id</td>
                    <td>@doctor.DocName</td>
                    <td>@doctor.Specialization</td>
                    <td>@doctor.PhoneNumber</td>
                    <td>
                        <a href="/Doctors/Edit?id=@doctor.Id" class="btn btn-sm btn-warning me-2">Edit</a>
                        <a href="/Doctors/Delete?id=@doctor.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
