@model MVCExample.Models.Doctor

@{
    ViewData["Title"] = "Delete Doctor";
}

<h2 class="text-center my-4 text-danger">Confirm Delete</h2>

<div class="container w-50 border rounded p-4 shadow-sm bg-light">
    <h4 class="text-center mb-4">Are you sure you want to delete this doctor?</h4>

    <dl class="row">
        <dt class="col-sm-4">Doctor Name:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.DocName)</dd>

        <dt class="col-sm-4">Specialization:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.Specialization)</dd>

        <dt class="col-sm-4">Phone Number:</dt>
        <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
    </dl>

    <form method="post" action="Delete">
        <div class="text-center">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a href="/Doctors/Index" class="btn btn-secondary">Cancel</a>
        </div>
        @Html.HiddenFor(model => model.Id)
    </form>
</div>